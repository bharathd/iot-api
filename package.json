    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^2.0.0",
